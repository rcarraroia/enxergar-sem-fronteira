# ============================================================================
# CHAT SYSTEM CONFIGURATION
# ============================================================================

# Webhook URLs para integração com n8n
VITE_CHAT_PUBLIC_WEBHOOK_URL=https://your-n8n-instance.com/webhook/public-chat
VITE_CHAT_ADMIN_WEBHOOK_URL=https://your-n8n-instance.com/webhook/admin-chat
VITE_CHAT_TEST_WEBHOOK_URL=https://your-n8n-instance.com/webhook/test-chat

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Habilitar sistema de chat (true/false)
VITE_CHAT_ENABLE_CHAT=true

# Habilitar chat público na página de captação (true/false)
VITE_CHAT_ENABLE_PUBLIC_CHAT=true

# Habilitar chat admin no painel (true/false)
VITE_CHAT_ENABLE_ADMIN_CHAT=true

# Habilitar entrada por voz (true/false)
VITE_CHAT_ENABLE_VOICE_INPUT=false

# Habilitar sistema de segurança avançado (true/false)
VITE_CHAT_ENABLE_ADVANCED_SECURITY=true

# Habilitar rate limiting (true/false)
VITE_CHAT_ENABLE_RATE_LIMIT=true

# Habilitar logging detalhado (true/false)
VITE_CHAT_ENABLE_DETAILED_LOGGING=false

# Habilitar métricas e analytics (true/false)
VITE_CHAT_ENABLE_METRICS=true

# Habilitar modo de desenvolvimento (true/false)
VITE_CHAT_ENABLE_DEV_MODE=false

# Habilitar retry automático (true/false)
VITE_CHAT_ENABLE_AUTO_RETRY=true

# Habilitar notificações (true/false)
VITE_CHAT_ENABLE_NOTIFICATIONS=true

# Habilitar persistência de histórico (true/false)
VITE_CHAT_ENABLE_HISTORY_PERSISTENCE=true

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Domínios permitidos para webhooks (separados por vírgula)
VITE_CHAT_ALLOWED_DOMAINS=your-n8n-instance.com,localhost,127.0.0.1

# Tamanho máximo da mensagem em caracteres
VITE_CHAT_MAX_MESSAGE_LENGTH=1000

# Limite de mensagens por minuto por usuário
VITE_CHAT_RATE_LIMIT_PER_MINUTE=20

# Timeout da sessão em milissegundos (24 horas = 86400000)
VITE_CHAT_SESSION_TIMEOUT_MS=86400000

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Timeout de requisição em milissegundos
VITE_CHAT_REQUEST_TIMEOUT_MS=30000

# Número máximo de tentativas de retry
VITE_CHAT_MAX_RETRY_ATTEMPTS=3

# Número máximo de sessões simultâneas
VITE_CHAT_MAX_CONCURRENT_SESSIONS=5

# Número máximo de mensagens por sessão
VITE_CHAT_MAX_MESSAGES_PER_SESSION=100

# Delay de debounce para validação em milissegundos
VITE_CHAT_DEBOUNCE_DELAY_MS=300

# ============================================================================
# UI CONFIGURATION
# ============================================================================

# Tema do chat (light/dark/auto)
VITE_CHAT_THEME=auto

# Posição do widget (bottom-right/bottom-left/top-right/top-left)
VITE_CHAT_POSITION=bottom-right

# Mostrar indicador de digitação (true/false)
VITE_CHAT_SHOW_TYPING_INDICATOR=true

# Mostrar timestamps nas mensagens (true/false)
VITE_CHAT_SHOW_TIMESTAMPS=true

# Habilitar animações (true/false)
VITE_CHAT_ENABLE_ANIMATIONS=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Nível de log (debug/info/warn/error)
VITE_CHAT_LOG_LEVEL=warn

# Habilitar logging no console (true/false)
VITE_CHAT_ENABLE_CONSOLE_LOGGING=true

# Habilitar logging remoto (true/false)
VITE_CHAT_ENABLE_REMOTE_LOGGING=false

# Endpoint para logging remoto
VITE_CHAT_REMOTE_LOG_ENDPOINT=https://your-logging-service.com/api/logs

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Versão da aplicação
VITE_APP_VERSION=1.0.0

# Ambiente (development/staging/production/test)
NODE_ENV=development

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Chave da API para serviços de speech-to-text (opcional)
VITE_SPEECH_TO_TEXT_API_KEY=your-speech-api-key

# Endpoint para serviços de analytics (opcional)
VITE_ANALYTICS_ENDPOINT=https://your-analytics-service.com/api/events

# Chave da API para serviços de monitoramento (opcional)
VITE_MONITORING_API_KEY=your-monitoring-api-key

# ============================================================================
# SUPABASE CONFIGURATION (se aplicável)
# ============================================================================

# URL do Supabase
VITE_SUPABASE_URL=https://your-project.supabase.co

# Chave pública do Supabase
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# ============================================================================
# ADDITIONAL CONFIGURATION
# ============================================================================

# Habilitar modo de debug para desenvolvimento
VITE_DEBUG_MODE=false

# Habilitar hot reload para configurações
VITE_HOT_RELOAD_CONFIG=true

# Prefixo para chaves do localStorage
VITE_STORAGE_PREFIX=enxergar_chat_

# Intervalo de limpeza automática em milissegundos (1 hora = 3600000)
VITE_CLEANUP_INTERVAL_MS=3600000
